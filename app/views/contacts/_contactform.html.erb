			<section id="contacts" class="main">
				<header>
					<div class="container">
						<h2>Оформить заказ</h2>
					</div>
				</header>
				<div class="content style4 featured">
					<div class="container 75%">
						
							<%= simple_form_for Contact.new, :html => {:class => 'form-horizontal' } do |f| %>
							<div class="row 50%">
								<div class="6u"><%= f.input :name, :required => true %></div>
								<div class="6u"><%= f.input :email, :required => true %></div>
							</div>
							<div class="row 50%">
								<div class="12u"><%= f.input :message, :as => :text, :required => true %></div>
							</div>
							<div class="row">
								<div class="12u">
									<ul class="actions">
										<li><%= f.button :submit, 'Send message', :class=> "btn btn-primary" %></li>
										<li><input type="reset" class="button alt" value="Clear Form" /></li>
									</ul>
								</div>
							</div>
							<% end %>
						
					</div>
				</div>
			</section>